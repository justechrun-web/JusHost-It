
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if isAdmin() || isOwner(userId);
    }

    match /sites/{siteId} {
      allow read: if isAdmin() || isOwner(resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
      allow update, delete: if isAdmin() || isOwner(resource.data.ownerId);
    }

    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }

    match /site_metrics/{siteId} {
      allow read, write: if isAdmin();
    }
    
    match /access_reviews/{reviewId} {
      allow read, write: if isAdmin();
    }
  }
}
