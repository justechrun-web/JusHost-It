rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    // Checks if the user is logged in
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the user owns the document they are trying to access
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Checks if the user has an admin role (via custom claims)
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // --- Collection Rules ---

    // User Profile Rules
    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
    }

    // Site Management Rules
    match /sites/{siteId} {
      // Users can only see/edit their own sites; Admins can see/edit everything
      allow read, write: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      
      // Allow creation if the user sets themselves as the owner
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Audit Logs & Metrics (Admin Only)
    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }

    match /site_metrics/{metricId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow write: if isAdmin(); // Only the system/admin can write metrics
    }

    // Support Tickets
    match /support_tickets/{ticketId} {
      allow read, update: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
  }
}
