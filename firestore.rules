rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // ======================================================================
    // User data is only writable by the user themselves.
    // Contains public profile info and protected billing status.
    // ======================================================================
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /supportTickets/{ticketId} {
        allow read, write: if isOwner(userId);
      }
      match /login_events/{eventId} {
        allow read: if isOwner(userId);
        allow write: if false; // Only server can write
      }
    }

    // ======================================================================
    // Organization, Site, and Member data is protected.
    // High-level access is granted to organization members, but specific
    // write operations are handled by secure Cloud Functions.
    // ======================================================================
    match /orgs/{orgId} {
      allow read: if exists(/databases/$(database)/documents/orgMembers/$(request.auth.uid)_$(orgId));
      allow write: if false; // All writes must go through Cloud Functions
    }

    match /orgs/{orgId}/sites/{siteId} {
       allow read: if exists(/databases/$(database)/documents/orgMembers/$(request.auth.uid)_$(orgId));
       allow write: if false; // All writes must go through Cloud Functions
    }

    match /orgMembers/{membershipId} {
       allow read: if exists(/databases/$(database)/documents/orgMembers/$(request.auth.uid)_$(resource.data.orgId));
       allow write: if false; // All writes must go through Cloud Functions
    }

     match /orgInvitations/{inviteId} {
        allow read: if request.auth != null && resource.data.email == request.auth.token.email;
        allow write: if false; // Written by server-side processes only
     }
     
     match /orgUsage/{usageId} {
        allow read: if exists(/databases/$(database)/documents/orgMembers/$(request.auth.uid)_$(usageId));
        allow write: if false; // Written by server-side processes only
     }


    // ======================================================================
    // Audit logs and metrics are admin-only collections.
    // They are read-only from the client side.
    // ======================================================================
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Written by server-side processes only
    }

    match /metrics/{metricId} {
      allow read: if isAdmin();
      allow write: if false; // Written by server-side processes only
    }
  }
}
